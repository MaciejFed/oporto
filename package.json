{
  "name": "oporto",
  "version": "1.0.0",
  "description": "",
  "main": "./build/src/cli.js",
  "bin": {
    "oporto": "./build/src/cli.js"
  },
  "scripts": {
    "test": "jest test --detectOpenHandles --forceExit --coverage",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "eslint --fix .",
    "verify": "npm run lint && npm run format && npm run test",
    "build": "npm run verify && rm -rf build/** && npx tsc",
    "package": "npm run build && pkg . --targets node14-macos-x64",
    "execute": "npm run package && cp bin/oporto ~/bin/oporto"
  },
  "jest": {
    "testMatch": [
      "**/test/**/*.test.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaciejFed/oporto.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MaciejFed/oporto/issues"
  },
  "homepage": "https://github.com/MaciejFed/oporto#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "clear": "^0.1.0",
    "commander": "^9.3.0",
    "figlet": "^1.5.2",
    "path": "^0.12.7",
    "terminal-kit": "^2.4.0",
    "winston": "^3.8.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@spotify/eslint-config": "^13.0.1",
    "@types/clear": "^0.1.2",
    "@types/figlet": "^1.5.4",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.42",
    "@types/terminal-kit": "^1.34.0",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "babel-jest": "^28.1.1",
    "eslint": "^8.18.0",
    "nodemon": "^2.0.16",
    "pkg": "^5.7.0",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "pkg": {
    "scripts": "build/**/*.js",
    "assets": [
      "node_modules/figlet/fonts/Standard.flf",
      "node_modules/terminal-kit/lib/termconfig/**.js",
      "node_modules/terminal-kit/lib/colorScheme/**.**"
    ],
    "outputPath": "bin"
  }
}
