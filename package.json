{
  "name": "oporto",
  "version": "1.0.0",
  "description": "",
  "main": "./build/src/cli.js",
  "bin": {
    "oporto": "./build/src/cli.js"
  },
  "scripts": {
    "build": "rm -rf build/** && eslint --fix . && npx tsc",
    "package": "npm run build && pkg . --targets node14-macos-x64",
    "execute": "npm run package && cp bin/oporto ~/bin/oporto",
    "test": "npm run build && jest test",
    "lint": "eslint ."
  },
  "jest": {
    "testMatch": [
      "**/test/**/*.test.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaciejFed/oporto.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MaciejFed/oporto/issues"
  },
  "homepage": "https://github.com/MaciejFed/oporto#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "clear": "^0.1.0",
    "commander": "^9.3.0",
    "figlet": "^1.5.2",
    "path": "^0.12.7",
    "terminal-kit": "^2.4.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@types/clear": "^0.1.2",
    "@types/figlet": "^1.5.4",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.42",
    "@types/terminal-kit": "^1.34.0",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "babel-jest": "^28.1.1",
    "eslint": "^8.17.0",
    "nodemon": "^2.0.16",
    "pkg": "^5.7.0",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "pkg": {
    "scripts": "build/**/*.js",
    "assets": [
      "node_modules/figlet/fonts/Standard.flf",
      "node_modules/terminal-kit/lib/termconfig/**.js",
      "node_modules/terminal-kit/lib/colorScheme/**.**"
    ],
    "outputPath": "bin"
  }
}
